@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int Count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Room Number</th>
        <th>Title</th>
        <th>Remove</th>
        <th>Edit</th>

    </tr>
    @foreach (var item in Model)
    {
        Count++;
        <tr>
            <th>@Count>
            <td>@item.RoomNumber/td>
            <td>@item.Title</td>
            <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn btn-outline-danger">Remove</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn btn-outline-success">Edit</a></td>
          

        </tr>
    }
</table>
<a href="/AdminRoom/AddRoom/" class="btn btn-outline-info">New Room</a>
